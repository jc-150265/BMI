<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:BMI"
             x:Class="BMI.MainPage">
    <ContentPage.Content>
        <StackLayout>
            
            <Label Text="JK3A10 鎌田 裕登"
                   HorizontalOptions="StartAndExpand"/>
            <Label Text="身長を入力して下さい"
                   VerticalOptions="CenterAndExpand"
                   HorizontalOptions="CenterAndExpand"/>
            <Entry Text="160"
                   WidthRequest="60"
                   VerticalOptions="CenterAndExpand"
                   HorizontalOptions="CenterAndExpand"
                    x:Name="Height"/>
            <Label Text="体重を入力して下さい"
                   VerticalOptions="CenterAndExpand"
                   HorizontalOptions="CenterAndExpand"/>
            <Entry Text="50"
                   WidthRequest="60"
                   VerticalOptions="CenterAndExpand"
                   HorizontalOptions="CenterAndExpand"
                    x:Name="Weight"/>
            <Label Text=""
                   VerticalOptions="CenterAndExpand"
                   HorizontalOptions="CenterAndExpand"
                    x:Name="hoge"/>

            <Button Text="BMIを計算します"
                    Clicked="Button_Clicked"/>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>